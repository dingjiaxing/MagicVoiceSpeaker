<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/speakToit_bg">
        <ImageView
            android:id="@+id/setting_imagery_back_img"
            android:background="@color/speakToit_bg"
            style="@style/menu_back"/>
        <TextView
            android:id="@+id/setting_imagery_title"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/speakToit_bg"
            style="@style/menu_title"/>
        <TextView
            style="@style/menu_text"
            android:background="@color/speakToit_bg"
            android:textColor="@color/white"
            android:clickable="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            style="@style/width_view"/>
        <LinearLayout
            android:id="@+id/setting_imagery_changeBackgroud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:clickable="true"
            android:background="@drawable/setting_item_shape">
            <TextView
                style="@style/setting_text_item"
                android:padding="0dp"
                android:text="@string/settingImagery_backgroud" />
            <TextView
                style="@style/setting_introduce_text_item"
                android:textColor="@color/grey_heavy"
                android:text="@string/settingImagery_put_later"/>
        </LinearLayout>
        <View
            style="@style/width_view"/>
        <LinearLayout
            android:id="@+id/setting_imagery_changeImagery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:clickable="true"
            android:background="@drawable/setting_item_shape">
            <TextView
                style="@style/setting_text_item"
                android:padding="0dp"
                android:text="@string/settingImagery_imagery" />
            <TextView
                style="@style/setting_introduce_text_item"
                android:textColor="@color/grey_heavy"
                android:text="@string/settingImagery_put_later"/>
        </LinearLayout>
        <View
            style="@style/width_view"/>
        <LinearLayout
            android:id="@+id/setting_imagery_changeVoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:clickable="true"
            android:background="@drawable/setting_item_shape">
            <TextView
                style="@style/setting_text_item"
                android:padding="0dp"
                android:text="@string/settingImagery_voice" />
            <TextView
                style="@style/setting_introduce_text_item"
                android:textColor="@color/grey_heavy"
                android:text="@string/settingImagery_put_later"/>
        </LinearLayout>
        <View
            style="@style/width_view"/>
    </LinearLayout>
</LinearLayout>