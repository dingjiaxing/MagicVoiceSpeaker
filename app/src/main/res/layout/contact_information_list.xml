<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">


    <ListView
        android:id="@+id/contact_information"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:layout_above="@+id/contact_information_return"
        android:background="#771a8dc3"
        android:divider="@color/white"
        android:dividerHeight="1dp"
        android:layout_marginBottom="30dp"
        android:fitsSystemWindows="true"
        android:listSelector="@drawable/setting_item_shape"
        android:scrollbarAlwaysDrawVerticalTrack="true"/>

    <Button
        android:id="@+id/contact_information_return"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="110dp"
        android:text="返回"
        android:background="@drawable/message_button_cancel"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"/>

</RelativeLayout>
