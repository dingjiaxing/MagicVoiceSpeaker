<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SettingIntroduceActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/speakToit_bg">
        <ImageView
            android:id="@+id/setting_introduce_back_img"
            android:background="@color/speakToit_bg"
            style="@style/menu_back"/>
        <TextView
            android:id="@+id/setting_introduce_title"
            android:background="@color/speakToit_bg"
            android:textColor="@color/white"
            style="@style/menu_title"
            android:layout_weight="1"/>
        <TextView
            android:background="@color/speakToit_bg"
            android:textColor="@color/white"
            style="@style/menu_text"/>
    </LinearLayout>
    <View style="@style/width_view"/>
    <LinearLayout
        android:id="@+id/setting_introduce_web"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:background="@drawable/setting_item_shape">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/setting_internet"
            android:padding="10dp"/>
        <TextView
            style="@style/setting_text_item"
            android:layout_weight="1"
            android:text="@string/settingIntroduceView_web"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/settinf_right_2"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
    <View style="@style/width_view"/>
    <LinearLayout
        android:id="@+id/setting_introduce_sendMail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:background="@drawable/setting_item_shape">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/setting_email"
            android:padding="5dp"/>
        <TextView
            style="@style/setting_text_item"
            android:layout_weight="1"
            android:text="@string/settingIntroduceView_email"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/settinf_right_2"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
    <View style="@style/width_view"/>
    <LinearLayout
        android:id="@+id/setting_introduce_sendMessage_linear"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:background="@drawable/setting_item_shape">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/setting_logs"
            android:padding="10dp"/>
        <TextView
            style="@style/setting_text_item"
            android:layout_weight="1"
            android:text="@string/settingIntroduceView_logs"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/settinf_right_2"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
    <View style="@style/width_view"/>
    <LinearLayout
        android:id="@+id/setting_introduce_laws"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:background="@drawable/setting_item_shape">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/setting_terms"
            android:padding="10dp"/>
        <TextView
            style="@style/setting_text_item"
            android:layout_weight="1"
            android:text="@string/settingIntroduceView_terms"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/settinf_right_2"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
    <View style="@style/width_view"
        android:visibility="gone"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/setting_introduce_thanks"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:background="@drawable/setting_item_shape">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/setting_terms"
            android:padding="10dp"/>
        <TextView
            style="@style/setting_text_item"
            android:layout_weight="1"
            android:text="特别感谢"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/settinf_right_2"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
    <View style="@style/width_view"/>
    <LinearLayout
        android:id="@+id/setting_introduce_update"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:background="@drawable/setting_item_shape">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/setting_terms"
            android:padding="10dp"/>
        <TextView
            style="@style/setting_text_item"
            android:layout_weight="1"
            android:text="检测更新"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/settinf_right_2"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
    <View style="@style/width_view"/>
    <include layout="@layout/setting_company_bottom"/>
    <!--<TextView-->
        <!--style="@style/setting_introduce_text_item"-->
        <!--android:text="版本 1.0.0"-->
        <!--android:gravity="center"/>-->
    <!--<TextView-->
        <!--style="@style/setting_introduce_text_item"-->
        <!--android:text="©2015-2016年资脉企业发展（上海）有限公司"-->
        <!--android:gravity="center"/>-->
</LinearLayout>