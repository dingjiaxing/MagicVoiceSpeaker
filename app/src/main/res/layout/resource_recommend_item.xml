<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/resource_list_item_bg"
    android:padding="5dp"
    >
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/resource_recommend_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="资源标题"
        android:textColor="@color/white"
        android:textSize="@dimen/resource_list_title_size"/>
    <TextView
        android:id="@+id/resource_recommend_item_id"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/resource_recommend_item_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resource_recommend_item_title"
        android:layout_marginLeft="5dp"
        android:text="丁家星"
        android:textColor="@color/white"
        android:textSize="@dimen/resource_list_person_size"/>
    <TextView
        android:id="@+id/resource_recommend_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resource_recommend_item_title"
        android:layout_marginLeft="100dp"
        android:text="发布时间：2016年5月2日"
        android:textColor="@color/white"
        android:textSize="13sp"/>

</RelativeLayout>