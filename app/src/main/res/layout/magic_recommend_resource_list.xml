<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <biz.home.api.myComponent.Topbar
        android:id="@+id/magic_recommend_resource_topbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:title2="小秘书推荐的资源"></biz.home.api.myComponent.Topbar>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/magic_recommend_resource_topbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/magic_recommend_resource_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
    </LinearLayout>

</RelativeLayout>