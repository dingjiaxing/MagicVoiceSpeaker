<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/bg_green"
    tools:context=".SettingViewActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/speakToit_bg">
        <ImageView
            android:id="@+id/back_img"
            android:background="@color/speakToit_bg"
            style="@style/menu_back"/>
        <TextView
            style="@style/menu_title"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/setting_view_menu"/>
        <TextView
            android:background="@color/speakToit_bg"
            style="@style/menu_text"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="true"
        android:background="@drawable/setting_top_menu"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/setting_img_up"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:padding="20dp"
            android:src="@drawable/setting_up"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/setting_img_up"
            android:gravity="center_vertical"
            android:text="升级成为高级账户"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/settinf_right"
            android:layout_centerInParent="true"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/setting_list"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:layout_weight="10"
        android:divider="@color/grey_light"
        android:dividerHeight="1dp"
        android:background="@color/white"/>
</LinearLayout>
