<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/drawer_group_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/setting_self"/>
    <TextView
        android:id="@+id/drawer_group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/drawer_group_icon"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:text="我想订火车票"/>
    <TextView
        android:id="@+id/drawer_group_hint"
        android:layout_below="@+id/drawer_group_title"
        android:layout_toRightOf="@+id/drawer_group_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#31578b"
        android:text="“我想订从上海到北京的火车票”"/>
    <ImageView
        android:id="@+id/drawer_group_arrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/setting_self"/>
</RelativeLayout>