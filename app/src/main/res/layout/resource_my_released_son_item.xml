<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/resource_list_item_son_bg"
    android:padding="10dp"
    >
    <TextView
        android:id="@+id/resource_my_released_son_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="15dp"
        android:textSize="15sp"
        android:text="张三"/>
    <TextView
        android:id="@+id/resource_my_released_son_hint"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:textSize="15sp"
        android:text="2016年1月29日尝试与您联系"/>
    <TextView
        android:id="@+id/resource_my_released_son_uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
</RelativeLayout>