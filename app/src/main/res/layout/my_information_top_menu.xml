<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <biz.home.api.myComponent.Topbar
        android:id="@+id/my_information_topbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        custom:title2="我的信息">
    </biz.home.api.myComponent.Topbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_below="@+id/my_information_topbar">
        <LinearLayout
            android:id="@+id/my_information_linear1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/setting_item_shape">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/setting_terms"
                android:padding="10dp"/>
            <TextView
                style="@style/setting_text_item"
                android:layout_weight="1"
                android:text="个人资料修改"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/settinf_right_2"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <!--<View style="@style/width_view"/>-->
        <LinearLayout
            android:id="@+id/my_information_linear2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/setting_item_shape">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/setting_terms"
                android:padding="10dp"/>
            <TextView
                style="@style/setting_text_item"
                android:layout_weight="1"
                android:text="我的日程"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/settinf_right_2"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <View style="@style/width_view"/>
        <LinearLayout
            android:id="@+id/my_information_linear3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/setting_item_shape">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/setting_terms"
                android:padding="10dp"/>
            <TextView
                style="@style/setting_text_item"
                android:layout_weight="1"
                android:text="我联系过的资源"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/settinf_right_2"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <View style="@style/width_view"/>
        <LinearLayout
            android:id="@+id/my_information_linear4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/setting_item_shape">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/setting_terms"
                android:padding="10dp"/>
            <TextView
                style="@style/setting_text_item"
                android:layout_weight="1"
                android:text="我发布的资源"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/settinf_right_2"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <View style="@style/width_view"/>
        <LinearLayout
            android:id="@+id/my_information_linear5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/setting_item_shape">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/setting_terms"
                android:padding="10dp"/>
            <TextView
                style="@style/setting_text_item"
                android:layout_weight="1"
                android:text="我收藏的资源"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/settinf_right_2"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <View style="@style/width_view"/>
        <LinearLayout
            android:id="@+id/my_information_linear6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/setting_item_shape">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/setting_terms"
                android:padding="10dp"/>
            <TextView
                style="@style/setting_text_item"
                android:layout_weight="1"
                android:text="小秘书推荐的资源"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/settinf_right_2"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <View style="@style/width_view"/>
    </LinearLayout>


</RelativeLayout>